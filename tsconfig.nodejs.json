{
  "compilerOptions": {
    "rootDir": "src/lib",
    "outDir": "lib",

    "target": "ES2020",
    "module": "ES2020",

    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/lib/**/*"]
}
